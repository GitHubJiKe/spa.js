{
  "compilerOptions": {
    "target": "es2015", // 或者更高版本，如 es2016、es2017 等
    "lib": ["es2015", "dom"], // 确保包含 es2015
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "include": ["src"]
}
